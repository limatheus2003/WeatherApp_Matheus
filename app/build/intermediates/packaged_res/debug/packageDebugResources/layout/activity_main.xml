<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WeatherApp"
        android:textColor="#0D47A1"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/editCidade"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Digite o nome da cidade"
        android:inputType="textCapWords"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_below="@id/txtTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Buscar clima"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#2196F3"
        android:layout_below="@id/editCidade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txtCidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cidade: --"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/btnBuscar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/txtTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura: --°C"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/txtCidade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txtDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condição: --"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/txtTemperatura"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnSobre"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sobre"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#1976D2"
        android:drawableLeft="@android:drawable/ic_menu_info_details"
        android:drawablePadding="10dp"
        android:layout_below="@id/txtDescricao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="Escanear QR Code"
        android:src="@android:drawable/ic_menu_camera"
        android:backgroundTint="#1976D2"
        android:tint="@android:color/white" />

</RelativeLayout>
